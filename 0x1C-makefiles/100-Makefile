CC=gcc
SRC=main.c school.c
OBJ=main.o school.o
NAME=school
CFLAGS=-Wall -Werror -Wextra -pedantic
.PHONY: all clean oclean fclean re
# the use of 'PHONY' target is to avoid a conflict with a file of the same name
# and to improve performance.
all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(NAME) *~

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
